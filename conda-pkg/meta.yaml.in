package:
  name: cleanx
  version: ${version}

source:
  path: ..

requirements:
  host:
    - python==${python_version}
    - sphinx

  build:
    - setuptools

  run:
    - python==${python_version}
    - numpy
    - pandas
    - matplotlib
    - opencv
    - tesserocr

test:
  imports:
    - cleanX

about:
  home: https://github.com/drcandacemakedamoore/cleanX
  license: LGPL
  summary: >
    CleanX is a python library for exploring, cleaning and augmenting
    large datasets of Xrays as JPEG files.
